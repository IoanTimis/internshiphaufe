<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Bine ai venit!</h1>
    <p>Produse: </p>
    <ul id="ulProducts">
      <% products.forEach(function(product) { %>
        <li class="liProduct">
          <strong><%= product.name %></strong>,
          pret: <span><%= product.price %></span>
          <button class="btn editBtn" data-toggle="modal" data-target="#editModal" data-id="<%=product.id%>">Edit</button>
          <button class="btn deleteBtn" data-id="<%=product.id%>">Delete</button>
        </li>
      <% }); %>
    </ul>
  </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
    Adauga produs
  </button>

<!-- Modal -->
  <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action="/vendor/add-product" class="addForm">
            <div class="form-group">
              <label for="name">Nume produs</label>
              <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Nume produs" name="name">
            </div>
            <div class="form-group">
              <label for="price">price</label>
              <input type="text" class="form-control"placeholder="price" name="price">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="put" action="/vendor/update-product" class="editForm">
            <input type="hidden" name="id">
            <div class="form-group">
              <label for="name">Nume produs</label>
              <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Nume produs" name="name">
            </div>
            <div class="form-group">
              <label for="price">price</label>
              <input type="text" class="form-control" placeholder="price" name="price">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</main>

<footer>
    <%- include('../../partials/footer'); %>
</footer>

</body>
</html>