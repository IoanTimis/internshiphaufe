<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/admin/head') %>
</head>
<body>

  <div class="sidebar">
    <a href="/admin/">Acasa</a>
    <a href="/admin/users">Gestioneaza utilizatori</a>
    <a href="/admin/products">Gestioneaza produse</a>
    <a href="/logout">Logout</a>
  </div>

  <div class="main-content">
    <header class="bg-light p-3 shadow-sm">
      <li class="header-item">
        <button class="btn btn-primary addBtn">Adauga ...</button>
      </li>
    </header>
    
    <div class="container mt-3">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nume</th>
            <th>Pret</th>
            <th>UserId</th>
            <th>Data creării</th>
            <th>Data modificării</th>
            <th>Acțiuni</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr data-id="<%= product.id %>">
              <td><span><%= product.id %></span></td>
              <td><span><%= product.name %></span></td>
              <td><span><%= product.price %></span></td> 
              <td><span><%= product.userId %></span></td>
              <td><span><%= new Date(product.createdAt).toLocaleString() %></span></td> 
              <td><span><%= new Date(product.updatedAt).toLocaleString() %></span></td> 
              <td>
                <button class="btn btn-info" data-id="<%= product.id %>">Editare</button>
                <button class="btn btn-danger" data-id="<%= product.id %>">Ștergere</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>      
    </div>
  </div>

  <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="ModalLabel"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 id="modalMsg"></h6>
                <form action="" method="" id="Form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nume</label>
                        <input type="text" class="form-control"  name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Descriere</label>
                        <textarea class="form-control"  name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="img_url" class="form-label">Url imagine</label>
                        <input type="text" class="form-control"  name="img_url">
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Închide</button>
                        <button type="submit" class="btn btn-primary"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
  </div>

</body>
</html>
